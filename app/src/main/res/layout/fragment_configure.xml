<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Booking "
        android:textAlignment="center"
        android:focusable="false"
        android:textColor="#097"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Details:"
        android:textAlignment="center"
        android:focusable="false"
        android:textColor="#071"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/room_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Room number: "
        android:textAlignment="center"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/room_number1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:text="1"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/arrival1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Date of arrival:  "
        android:textAlignment="viewStart"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/departure1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:text="Date of departure:  "
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/people1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Number of people:  "
        android:textAlignment="viewStart"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/balcony"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Balcony:  "
        android:textAlignment="viewEnd"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:text="Configuration:"
        android:textAlignment="center"
        android:focusable="false"
        android:textColor="#071"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:text="Choose bed config  "
        android:textAlignment="viewStart"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:text="Television  "
        android:textAlignment="viewEnd"
        android:focusable="false"
        android:textColor="#091"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="240dp"
        android:spinnerMode="dropdown"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="245dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />



</RelativeLayout>